<% if @procedures.empty?%> 
	<%= content_tag( 'p', 'The scrutiny period calculator is currently undergoing maintenance. We hope to have it back fairly soon.' ) %>
<% else -%>
	<form action="calculator/calculate" method="GET" id="calculator">

	<fieldset>
	<legend>Period to calculate</legend>

	<%= render :partial => 'calculator/procedure', :collection => @procedures %>

	</fieldset>

	<p>
	<%= content_tag( 'label', 'Scrutiny start date: DD-MM-YYYY', :for => 'start-date' ) %>
	<br><br>
	<input type="date" name="start-date" id="start-date">

	</p>


	<p>
	<%= content_tag( 'label', 'Number of days to count', :for => 'day-count' ) %>
	<br><br>
	<input type="number" name="day-count" id="day-count">
	</p>

	<p>

	<button type="submit" id="calculate">Calculate</button>
	</p>	
	</form>
<% end -%>