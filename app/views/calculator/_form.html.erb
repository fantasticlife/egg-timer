<form action="calculator/calculate" method="GET">

<fieldset>
<legend>Choose a procedure</legend>

<%= render :partial => 'calculator/procedure', :collection => @procedures %>

</fieldset>

<p>
<%= content_tag( 'label', 'Set a scrutiny start date (YYYY-MM-DD)', :for => 'start-date' ) %>
<br><br>
<input type="date" name="start-date" id="start-date">

</p>


<p>
<%= content_tag( 'label', 'How many days to count', :for => 'day-count' ) %>
<br><br>
<input type="number" name="day-count" id="day-count">
</p>

<p>

<!-- <label for="calculate">Calculate scrutiny period end date</label> -->
<button type="submit" id="calculate">Calculate</button>
</p>	
</form>
