<% if @error_message -%>
	<%= content_tag( 'p', @error_message ) %>
<% else -%>
	<%= content_tag( 'p', 'The anticipated end date of the scrutiny period is:')%>
	<%= content_tag( 'p', @date.date.strftime( '%A, %-d %B %Y') ) %>
	<%= content_tag( 'p', 'Note that this date is likely to change if sitting days change.' ) %>
<% end -%>